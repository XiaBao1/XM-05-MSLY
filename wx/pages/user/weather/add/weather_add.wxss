/* pages/user/weather/add/weather_add.wxss */
page{
  background: #ededed;
  height: auto;
}
.form{
  width: 100%;
  height: 1000rpx;
  margin-top: 16rpx;
  background: #ffffff;
}
.inputBox{
  width: 100%;
  height: 90rpx;
  border-bottom:2rpx solid #ededed;
  display: flex;
  justify-content: space-between;
  padding:0 0 0 24rpx;
}
label{
  width: 40%;
  font-size: 32rpx;
  font-weight: bold;
  line-height: 90rpx;
}
radio{
  margin-top: 30rpx;
  margin-right: 30rpx;
}
.value{
  width: 70%;
  height: 90rpx;
  margin-right: 30rpx;
  text-align: right;
  margin-top: 10rpx;
  font-size: 30rpx;
  color: #999999;
}
.submit{
  width: 100%;
  height: 100rpx;
  position: absolute;
  bottom:0;
  left: 0;
  background: #3d4663;
  color: #ffffff;
  font-size: 30rpx;
  line-height: 70rpx;
  text-align: center;
  border-radius: 0;
}