<!--pages/loadEdit/loadEdit.wxml-->
<view class='main'>
  <form>
    <view class='else'>
      <view class='lists'>
        <view class='list_name'>截止时间</view>
        <view class='list_items'>
          <picker mode="date" value="{{ddl}}" start="2022-01-01" end="2023-12-31" bindchange="bindDDLChange">
            <view class="inputInfo">
              {{ddl}}
            </view>
          </picker>
          <image class='editPic' src='/image/edit.png'></image>
        </view>
      </view>
      <view class='lists'>
        <view class='list_name'>状态</view>
        <radio-group class="inputInfo list_item" bindchange="statusChange">
          <radio value="0" checked="" checked="{{status == 0}}">待完成</radio>
          <radio value="1" checked="{{status == 1}}">已完成</radio>
        </radio-group>
      </view>
      <view class='lists'>
        <view class='list_name'>事项内容</view>
      </view>
      <input type="text" class="todo-contents" value="{{contents}}" placeholder="请输入事项内容" bindinput="inputContents"/>
    </view>
  </form>
</view>
<view class='confirm'>
  <button class='confirmBtn' bindtap="commitClicked">修改</button>
</view>