<!--pages/mine/mine.wxml-->
<!-- 头部 -->
<view class='mine_info'>
  <image class='mine_banner' src='../../../image/earth.png'></image>
  <view class='mine_info_head'>
    <view class='mine_head_left' bindtap='moneyClicked'>
      <image class='mine_head_leftPic' src='../../../image/restMoney.png'></image>
      <view class='mine_head_leftDes'>余额：{{money}}</view>
    </view>
    <view class='jiange'></view>
    <view class='mine_head_center'>
      <view class='headBorder'><image class="Head" src="{{avatar}}"></image></view>
      <view class='dian'></view>
      <view class='nameBox' bindtap="userNameClicked">{{userName}}</view>
    </view>
    <view class='jiange'></view>
    <view class='mine_head_right' bindtap='addr'>
      <image src='../../../image//addr.png' class='mine_head_rightPic'></image>
      <view class='mine_head_rightDes'>地址：{{province}}</view>
    </view>
  </view>
</view>
<!-- 内容 -->
<view class='list_content'>
  <view class='list' bindtap='modifyInfoClicked'>
    <view class='list_left'>
      <image class='listIcon' src='../../../image//realName.png'></image>
      <view class='listName'>修改信息</view>
    </view>
    <image src='../../../image//jiantou.png' class='jiantou'></image>
  </view>
  <view class='list' bindtap='commentClicked'>
    <view class='list_left'>
      <image class='listIcon' src='../../../image//view.png'></image>
      <view class='listName'>意见反馈</view>
    </view>
    <image src='../../../image//jiantou.png' class='jiantou'></image>
  </view>
  <button class='signOut' bindtap='signOutClicked'>退出登录</button>
</view>
