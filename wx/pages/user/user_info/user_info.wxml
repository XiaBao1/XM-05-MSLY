<!--pages/realName/realName.wxml-->
<view class='main'>
  <view class='form'>
    <view class='inputBox'>
      <label >登录账号</label>
      <text class="value" >{{loginName}}</text>
    </view>    
    <view class='inputBox'>
      <label>用户名</label>
      <text class="value" >{{userName}}</text>
    </view>
    <view class='inputBox'>
      <label >手机号码</label>
      <text class="value">{{phone}}</text>
    </view>
    <view class='inputBox'>
      <label >邮箱</label>
      <text class="value">{{email}}</text>
    </view>
    <view class='inputBox'>
      <label >创建时间</label>
      <text class="value">{{createTime}}</text>
    </view>
    <view class='inputBox'>
      <label >余额</label>
      <text class="value">{{money}}</text>
    </view>
    <view class='inputBox'>
      <label >省份</label>
      <text class="value">{{province}}</text>
    </view>
    <view class='inputBox'>
      <label >性别</label>
      <text class="value">{{sex == "0" ? "男" : "女"}}</text>
    </view>
  </view>
</view>