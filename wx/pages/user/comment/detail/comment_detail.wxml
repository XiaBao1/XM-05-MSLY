<!--pages/loadEdit/loadEdit.wxml-->
<view class='main'>
  <view class='else'>
    <view class='lists'>
      <view class='list_name'>反馈时间</view>
      <view class='list_items'>
        <view class="inputInfo">{{feedbackDate}}</view>
      </view>
    </view>
    <view class='lists'>
      <view class='list_name'>反馈内容</view>
    </view>
    <view class="todo-contents">{{feedbackContent}}</view>
  </view>

  <view class='else'>
    <view class='lists'>
      <view class='list_name'>回复时间</view>
      <view class='list_items'>
        <view class="inputInfo">{{answerDate != null ? answerDate : ''}}</view>
      </view>
    </view>
    <view class='lists'>
      <view class='list_name'>回复内容</view>
    </view>
    <view class="todo-contents">{{answerContent != null ? answerContent : '管理员尚未回复该反馈'}}</view>
  </view>

</view>